{
  "name": "aws-javascript-crypto-helpers",
  "private": true,
  "version": "0.0.1",
  "description": "AWS encryption helpers for javascript",
  "main": "index.js",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "npm run clear-build-cache && lerna clean",
    "clear-build-cache": "rimraf ./packages/*/build/*",
    "pretest": "lerna run pretest",
    "test": "lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:aws/aws-sdk-js-crypto-helpers.git"
  },
  "author": {
    "name": "AWS Crypto Tools Team",
    "email": "aws-cryptools@amazon.com",
    "url": "https://docs.aws.amazon.com/aws-crypto-tools/index.html?id=docs_gateway#lang/en_us"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "chai": "^4.1.2",
    "glob": "^7.1.2",
    "lerna": "^3.18.1",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.3",
    "typescript": "^3.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
